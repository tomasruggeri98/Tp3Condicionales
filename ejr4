// 4. Ingresar tres valores, sumarlos, calcular el promedio e indicar e imprimir cuÃ¡l de estos valores es mayor al promedio

Console.WriteLine("ingresa el valor 1:");
float v1 = float.Parse(Console.ReadLine());

Console.WriteLine("ingresa el valor 2:");
float v2 = float.Parse(Console.ReadLine());

Console.WriteLine("ingresa el valor 3:");
float v3 = float.Parse(Console.ReadLine());

float suma = v1 + v2 + v3;
float promedio = suma / 3;

Console.WriteLine("La suma de los valores es de " + suma + " con un promedio de: " + promedio);

if (v1 > promedio)
{
    Console.WriteLine("El valor1 es mayor al promedio, con un valor de: " + v1);
}

if (v2 > promedio)
{
    Console.WriteLine("El valor2 es mayor al promedio, con un valor de: " + v2);
}

if (v3 > promedio)
{
    Console.WriteLine("El valor3 es mayor al promedio, con un valor de: " + v3);
}
