// 3. Ingresar los tres lados de un triángulo e indicar que tipo de triángulo es,

Console.WriteLine("Ingrese el Lado1 de un triangulo: ");
int l1 = int.Parse(Console.ReadLine());

Console.WriteLine("Ingrese el Lado2 de un triangulo: ");
int l2 = int.Parse(Console.ReadLine());

Console.WriteLine("Ingrese el Lado3 de un triangulo: ");
int l3 = int.Parse(Console.ReadLine());


if (l1 == l2 && l2 == l3)
{
    Console.WriteLine("es un triangulo equilatero");
}

if (l1 != l2 && l2 != l3 && l3 != l1 )
{
    Console.WriteLine("es un triangulo escaleno");

}

if (l1 == l2 && l3 != l2 || l3 == l2 && l1 != l3)
{
    Console.WriteLine("es un triangulo isosceles");

}
